<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="/css/register.css">

<body>
    <div class="registration-container">
        <h2>Cadastro</h2>
        <form autocomplete="off">
            <div class="mb-3">
                <input type="text" class="form-control" id="name" placeholder="Seu Nome Completo" required>
            </div>

            <!-- Campo de E-mail -->
            <div class="mb-3">
                <input type="email" class="form-control" id="email" placeholder="Seu E-mail" required>
            </div>

            <!-- Campo de Função -->
            <div class="mb-3">
                <input type="text" class="form-control" id="function" name="function" placeholder="Sua função (ex: Estudante, Editor, Leitor)" required>
            </div>

            <!-- Campo de Senha -->
            <div class="mb-3">
                <input type="password" class="form-control" id="password" placeholder="Sua Senha" required>
            </div>

            <!-- Campo de Confirmação de Senha -->
            <div class="mb-3">
                <input type="password" class="form-control" id="confirmPassword" placeholder="Confirmar Senha" required>
            </div>

            <!-- Botão de Registro -->
            <button type="submit" class="btn-register">Cadastrar</button>
        </form>

        <div class="login-link">
            <p>Já tem uma conta? <a href="/login">Faça login</a></p>
        </div>
    </div>
</body>