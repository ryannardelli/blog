    <script>
        let list = document.querySelectorAll('.navigation li');
        function activeLink() {
            list.forEach((item) => {
                item.classList.remove('hoverend');
                this.classList.add('hovered');
            });
        }
        list.forEach((item) => {
            item.addEventListener('mouseever', activeLink);
        })
    </script>
