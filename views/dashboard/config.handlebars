<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<link rel="stylesheet" href="/css/dashboard/config.css">

<div class="container mt-5">
    <h2 class="text-center">Configurações do Perfil</h2>
    <form action="/atualizar-perfil" method="POST" enctype="multipart/form-data" autocomplete="off">
        <div class="row">
            <!-- Imagem de Perfil -->
            <div class="col-md-4">
                <div class="text-center">
                    <label for="perfilImage" class="btn btn-outline-primary">
                        <i class="bi bi-camera-fill"></i> Alterar Imagem
                    </label>
                    <input type="file" id="perfilImage" name="perfilImage" class="d-none" accept="image/*">
                    <img id="perfilPreview"
                        src="{{user.profile_picture}}"
                        alt="Imagem de Perfil" class="img-fluid rounded-circle mt-3"
                        style="width: 150px; height: 150px;">
                </div>
            </div>
            <!-- Dados do Usuário -->
            <div class="col-md-8">
                <div class="mb-3">
                    <label for="nome" class="form-label">Nome</label>
                    <input type="text" class="form-control" id="nome" name="nome" value="Nome Usuário" required>
                </div>
                <div class="mb-3">
                    <label for="senha" class="form-label">Senha</label>
                    <input type="password" class="form-control" id="senha" name="senha" placeholder="Nova senha"
                        required>
                </div>
                <div class="mb-3">
                    <label for="funcao" class="form-label">Função</label>
                    <input type="text" class="form-control" id="funcao" name="funcao" placeholder="Digite sua função"
                        required>
                </div>
                <button type="submit" class="btn btn-primary w-100">Salvar Alterações</button>
            </div>
        </div>
    </form>
</div>