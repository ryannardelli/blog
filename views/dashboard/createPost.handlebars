<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="/css/dashboard/feed.css">

<body id="body-createPost">
    <div class="container mt-5" id="container-create-posts">
        <div> 
                    <div>
                        <form action="/dashboard/submitPost" method="POST" enctype="multipart/form-data">
                         <input type="hidden" name="userId" value="{{user.id}}">
                            <div class="mb-4">
                                <label for="title" class="form-label">Título</label>
                                <input type="text" id="title" name="title" class="form-control"
                                    placeholder="Digite o título do post" required>
                            </div>

                              <div class="mb-4">
                                <label for="title" class="form-label">Resumo<span
                                        class="text-danger">*</span></label>
                                <input type="text" id="summary" name="summary" class="form-control"
                                    placeholder="Digite um resumo para o post">
                            </div>

                            <div class="mb-4">
                                <label for="content" class="form-label">Conteúdo do Post</label>
                                <textarea id="contentTextArea" name="content" rows="6" class="form-control"
                                    placeholder="Digite o conteúdo do post" required></textarea>
                            </div>

                            <div class="mb-4">
                                <label for="category" class="form-label">Categoria do Post</label>
                                <select id="category" name="category" class="form-select" required>
                                    <option value="" disabled selected>Selecione uma categoria</option>
                                    <option value="tecnologia">Tecnologia</option>
                                    <option value="educacao">Educação</option>
                                    <option value="saude">Saúde</option>
                                    <option value="esportes">Esportes</option>
                                    <option value="entretenimento">Entretenimento</option>
                                    <option value="negocios">Negócios</option>
                                    <option value="politica">Política</option>
                                    <option value="outros">Outros</option>
                                </select>
                            </div>


                            <div class="mb-4">
                                <label for="image" class="form-label">Imagem do Post <span
                                        class="text-danger">*</span></label>
                                <input type="file" id="image" name="image" class="form-control" accept="image/*">
                            </div>

                            <div class="text-center">
                                <button type="submit" class="btn btn-success">Publicar Post</button>
                                <a href="/dashboard/feed" class="btn btn-warning">Voltar</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>