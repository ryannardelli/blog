<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<link rel="stylesheet" href="/css/dashboard/profile.css">

<body>
    <div class="row mt-4">
        <div class="col-md-12">
            <div class="profile-card bg-white shadow">
                <div class="text-center">
                    <img src="{{user.profile_picture}}"
                        alt="Foto de perfil" class="img-fluid">
                    <h3>{{user.name}}</h3>
                    <p class="text-muted">{{user.function}}</p>
                </div>

                <div class="list-group mt-4">
                    <div class="list-group-item">
                        <strong>Nome:</strong> {{user.name}}
                    </div>
                    <div class="list-group-item">
                        <strong>Função:</strong> {{user.function}}
                    </div>
                     <div class="list-group-item">
                        <strong>Email:</strong> {{user.email}}
                    </div>
                    <div class="list-group-item">
                        <strong>Criado em:</strong> {{formattedDate}}
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
</body>