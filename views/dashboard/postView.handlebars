<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="/css/dashboard/feed.css">
<script src="/js/dashboard.js" defer></script>

<body>
    <div class="container">
        <div class="post-container">
            <!-- Exibir a imagem do post -->
            <div class="post-image">
                <img src="{{post.post_picture}}" alt="Post Image">
            </div>
            <div class="post-content">
                <!-- TÃ­tulo do Post -->
                <h1 class="post-title">{{post.title}}</h1>

                <p>{{post.summary}}</p>

                <p class="post-meta">
                    <!-- Autor do Post -->
                    Por <span class="post-author"> <a href="/userView/{{user.id}}" class="link-profile">{{user.name}}</a></span> em
                    <span class="post-date">{{post.createdAt}}</span>
                </p>

                <div class="post-body">
                    <p>{{post.content}}</p>
                </div>

                <a href="/dashboard/feed" class="btn btn-primary" id="backButton">Voltar</a>

            </div>
        </div>
    </div>
</body>