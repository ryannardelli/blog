<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="/css/dashboard/feed.css">

<body id="body-createPost">
    <div class="container mt-5" id="container-create-posts">
        <div>
            <div>
                <form action="/dashboard/editPost/{{post.id}}" method="POST">
                    <input type="hidden" name="userId" value="{{post.id}}">
                    <!-- Título -->
                    <div class="mb-4">
                        <label for="title" class="form-label">Título</label>
                        <input type="text" id="title" name="title" class="form-control"
                               placeholder="Digite o título do post" value="{{post.title}}" required>
                    </div>

                    <!-- Resumo -->
                    <div class="mb-4">
                        <label for="summary" class="form-label">Resumo</label>
                        <input type="text" id="summary" name="summary" class="form-control"
                               placeholder="Digite um resumo para o post" value="{{post.summary}}" required>
                    </div>

                    <!-- Conteúdo do Post -->
                    <div class="mb-4">
                        <label for="content" class="form-label">Conteúdo do Post</label>
                        <textarea id="content" name="content" rows="6" class="form-control"
                                  placeholder="Digite o conteúdo do post" required>{{post.content}}</textarea>
                    </div>

                    <!-- Botões -->
                    <div class="text-center">
                        <button type="submit" class="btn btn-success">Editar</button>
                        <a href="/dashboard/feed" class="btn btn-warning">Voltar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
