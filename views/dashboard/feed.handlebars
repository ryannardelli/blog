<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
<link rel="stylesheet" href="/css/dashboard/feed.css">

<section id="posts" class="py-5">
  <div class="container">
    <h2 class="text-center mb-4">Suas Publicações</h2>
    <div class="row g-4">
      {{#each posts}}
        <div class="col-lg-4 col-md-6">
          <div class="card shadow-sm border-0">
            <div class="position-relative">
              <!-- Imagem do post -->
              <img src="{{this.post_picture}}" class="card-img-top rounded-top" alt="Post" id="image-post">

              <!-- Formulário com campo de upload e ícone de câmera no centro -->
              <form action="/dashboard/uploadImagePost/{{this.id}}" method="POST" enctype="multipart/form-data" class="position-absolute top-50 start-50 translate-middle text-center">
                <!-- Campo de upload de imagem -->
                <input type="file" name="post_picture" id="file-upload-{{this.id}}" style="display:none" accept="image/*" onchange="this.form.submit()"/>
                <!-- Ícone de câmera que serve como botão para abrir o campo de upload -->
                <label for="file-upload-{{this.id}}" class="btn btn-link p-0" title="Upload de Imagem">
                  <i class="bi bi-camera-fill text-white" style="font-size: 3rem;"></i>
                </label>
              </form>
            </div>
            <div class="card-body">
              <h5 class="card-title">{{this.title}}</h5>
              <p class="card-text text-muted">{{this.summary}}</p>
              <div class="mt-3" id="container-links">
                <span class="text-secondary small">Publicado em: {{this.createdAt}}</span>
                <div class="btn-group">
                  <!-- Botão para exibir o post -->
                  <a href="/dashboard/postView/{{this.id}}" class="btn rounded-circle ms-2" id="link" title="Exibir">
                    <i class="bi bi-eye"></i>
                  </a>

                  <form action="/dashboard/editPost/{{this.id}}" method="post">
                    <a href="/dashboard/editPost/{{this.id}}" class="btn rounded-circle ns-2" title="Editar" id="link">
                      <i class="bi bi-pencil"></i>
                    </a>
                  </form>

                  <form action="/dashboard/deletePost/{{this.id}}" method="post">
                    <button class="btn rounded-circle ms-2" title="Excluir" id="link">
                      <i class="bi bi-trash"></i>
                    </button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
    <div class="text-center mt-4">
      <a href="/dashboard/createPost" class="btn btn-outline-success shadow-sm mb-4" id="btn-post">Criar publicação</a>
    </div>
  </div>
</section>



