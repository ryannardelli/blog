<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
<link rel="stylesheet" href="/css/dashboard/feed.css">

<section id="posts" class="py-5">
  <div class="container">
    <h2 class="text-center mb-4">Suas Publicações</h2>
    <div class="row g-4">
      {{#each posts}}
        <div class="col-lg-4 col-md-6">
          <div class="card shadow-sm border-0">
            <img src="{{this.post_picture}}" class="card-img-top rounded-top" alt="Post">
            <div class="card-body">
              <h5 class="card-title">{{this.title}}</h5>
              <p class="card-text text-muted">{{this.summary}}</p>
              <div class="d-flex justify-content-between align-items-center mt-3">
                <span class="text-secondary small">Publicado em: {{this.createdAt}}</span>
                <div class="btn-group">
                  <button class="btn btn-primary btn-sm rounded-circle shadow-sm" title="Editar">
                    <i class="bi bi-pencil"></i>
                  </button>
                  <button class="btn btn-danger btn-sm rounded-circle shadow-sm ms-2" title="Excluir">
                    <i class="bi bi-trash"></i>
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
    <div class="text-center mt-4">
      <a href="/dashboard/createPost" class="btn btn-outline-success shadow-sm mb-4" id="btn-post">Criar publicação</a>
    </div>
  </div>
</section>

