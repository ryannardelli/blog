<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="/css/login.css">

<body>
    <div class="login-container">
        <h2>Login</h2>
        <form method="post" action="/login/loginUser" autocomplete="off">
            <!-- Campo de E-mail -->
            <div class="form-floating">
                <input type="email" class="form-control" name="email" id="email" placeholder="Seu E-mail" autocomplete="off" required>
                <label for="email">E-mail</label>
            </div>
            <!-- Campo de Senha -->
            <div class="form-floating">
                <input type="password" class="form-control" name="password" id="password" placeholder="Sua Senha" required>
                <label for="password">Senha</label>
            </div>
            <!-- BotÃ£o de Login -->
            <button type="submit" class="btn-login">Entrar</button>
        </form>

        <div class="forgot-password">
            <a href="#">Esqueceu a senha?</a>
        </div>
    </div>
</body>